{
  "name": "TypeMaster",
  "private": true,
  "version": "1.0.2",
  "description": "TypeMaster 打字实操练习系统",
  "main": "electron.js",
  "homepage": "./",
  "author": "Gemini",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrC0824/TypeMaster.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "pnpm run build && electron-builder && node -e \"const fs=require('fs'); const p=['release/builder-debug.yml', 'release/builder-effective-config.yaml']; const d='release/win-unpacked'; p.forEach(f=>{try{fs.unlinkSync(f)}catch(e){}}); try{fs.rmSync(d, {recursive:true, force:true})}catch(e){}\"",
    "release:patch": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags",
    "release": "pnpm version patch && git push --follow-tags"
  },
  "packageManager": "pnpm@9.0.6",
  "ciConfig": {
    "packageManager": "pnpm"
  },
  "dependencies": {
    "@google/genai": "*",
    "builder-util-runtime": "^9.2.4",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.378.0",
    "recharts": "^2.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.27.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.typemaster.ai",
    "productName": "TypeMaster",
    "copyright": "Copyright © 2025 Gemini",
    "compression": "store",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "public/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "MrC0824",
        "repo": "TypeMaster",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/favicon.ico"
    },
    "portable": {
      "artifactName": "${productName}_Portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "installerHeaderIcon": "public/favicon.ico",
      "include": "build/installer.nsh",
      "artifactName": "${productName}_Setup.${ext}"
    }
  }
}
